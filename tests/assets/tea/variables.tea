@{
    var a = 2;
    var x = a * a;
    var y = x + 1;
    var z = x * 2 + y;
}

.variables {
  width: @{z + 1}cm; // 14cm
}

@{
    var b = a * 10;
    var c = "#888";
    var fonts = "\"Trebuchet MS\", Verdana, sans-serif";
    var f = fonts;
    var quotes = "\"~\" " + "\"~\"";
}

.variables {
  height: @{b + x + 0}px; // 24px
  color: @c;
  font-family: @f;
  quotes: @quotes;
}

.redefinition {
    @{
        var teavar = 4;
        teavar = 3;
        var three = teavar;
    }

    three: @teavar;
}

.values {
    @{
        var a = "'Trebuchet'",
        multi = "\"A\", B, C";
    };
    font-family: @{a}, @{a}, @{a};
    url: url(@a);
    multi: something @{multi}, @{a};
}

.variable-names {
    @ teavar = "\"hello\"";
    name: @teavar;
}
.alpha {
    @ teavar = 42;
    filter: alpha(opacity=@teavar);
}

a:nth-child(@{a}) {
    border: 1px;
}

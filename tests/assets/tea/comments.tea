#comments /* boo */ {
  /**/ // An empty comment
  color: @{color('red')}; /* A C-style comment */
  background-color: @{color('orange')}; // A little comment
  font-size: 12px;

  /* lost comment */ content: @teavar;

  border: 1px solid black;

  // padding & margin //
  padding: 0; // }{ '"
  margin: 2em;
} //

/* commented out
  #more-comments {
    color: grey;
  }
*/

.selector /* .with */, .lots, /* of */ .comments {
  color: grey, /* blue */ @{color('orange')};
  -webkit-border-radius: 2px /* webkit only */;
  -moz-border-radius: @{2 * 4}% /* moz only with operation */;
}


@ var x = "blue";
@ var z = "transparent";
@ var mix = "none";

.mixin() {
  @ mix = "#989";
}

.tiny-scope {
  color: @mix; // none
  .mixin();
  color: @mix; //#989
}

.scope1 {
  @ var y = "orange";
  @ z = "black";
  color: @x; // blue
  border-color: @z; // black
  .hidden() {
    @ x = "#131313";
  }
  .scope2 {
    @ y = "red";
    color: @x; // blue
    .scope3 {
      @ var local = "white";
      color: @y; // red
      border-color: @z; // black
      background-color: @local; // white
    }
  }
}

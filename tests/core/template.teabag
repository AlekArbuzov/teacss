~base {
    html {
        body(width="300px") {
            #content {
                block {}
            }
            #outer {
                li { x }
                li { y }
            }
        }
    }
}

~post {
    ~base
    #content block ~ *#filled {
        @post {
            h1 {@title @date}
            .post-content {@content}
        }
    }
}